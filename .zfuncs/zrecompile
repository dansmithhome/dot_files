# Usage: zrecompile
# 



function zrecompile()
{
    local FUNCSDIR=~/.zfuncs
    local srcfile

    [[ -d $FUNCSDIR ]] || return 0

    /bin/rm -f ${FUNCSDIR}/*.zwc    2> /dev/null
    /bin/rm -f ${FUNCSDIR}/*~       2> /dev/null

    for srcfile in ${FUNCSDIR}/*
    do
        local funcname=$(basename ${srcfile})
        unset -f ${funcname}
        echo compiling ${funcname}...
        zcompile -U ${srcfile}
        autoload -U ${funcname}
    done
}
