# Usage: zrecompile
# 



function zrecompile()
{
    local FUNCSDIR=~/.zfuncs
    local srcfile

    [[ -d $FUNCSDIR ]] || return 0

    find ~/.zfuncs \( -name \*.zwc -o -name \*~ -o  -name \#\* \) -print0 | xargs -0 /bin/rm -f    

    for srcfile in ${FUNCSDIR}/*
    do
        local funcname=$(basename ${srcfile})
        unset -f ${funcname}
        echo compiling ${funcname}...
        zcompile -U ${srcfile}
        autoload -U ${funcname}
    done
}
