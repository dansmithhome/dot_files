# Usage: zrecompile
# 



function zrecompile()
{
    local FUNCSDIR=~/.zfuncs

    [[ -d $FUNCSDIR ]] || return 0

    /bin/rm -f ${FUNCSDIR}/*.zwc    2> /dev/null
    /bin/rm -f ${FUNCSDIR}/*~       2> /dev/null

    for srcfile in ${FUNCSDIR}/*
    do
        echo compiling $(basename ${srcfile})...
        zcompile -U ${srcfile}
    done
}
