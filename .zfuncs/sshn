function sshn
{
    # usage: sshn node
    # SSH to node after converting node name to hostname
    
    local node="${1}"
    local hname

    hname=$( node-ip "${node}" )
    if [[ -z "${hname}" ]]
    then
       echo No such node: ${node} 1>&2
       return 1
    fi

    ssh ${hname}
    return 0
}
     