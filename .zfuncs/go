# Usage: go [project]
#        go [directory]
# 



function go ()
{
    local project=$1

    if [[ ${project} == '' ]]
    then 
         if [[ ${PROJECT_DIR} == '' ]]
         then
                echo 'Project not defined.  Usage: go [project]'
                return
         fi
         cd ${PROJECT_DIR}
         return
    fi

    if [[ -d ~/src/${project} ]]
    then 
        # TODO: Remove any remnants of current project from path, cdpath
        export PROJECT_DIR; PROJECT_DIR=~/src/${project}
        cdpath+=(${PROJECT_DIR} ${PROJECT_DIR}/src)
    else 
        cd ${PROJECT_DIR}/$1
    fi
}
