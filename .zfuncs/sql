function sql()
{
    local db=Measurements

    if [[ $1 == -d ]]
    then
        db=$2
        shift
        shift
    fi

    if [[ $1 = recreate ]]
    then
        $PROJECT_DIR/sql/create-measurements-db.sh -f  ${db}
    else
        local COMMAND
        COMMAND=$( echo "${*}" | sed 's/select all /select * /g' )
        echo ${COMMAND}
        mysql -e "${COMMAND}"  ${db}
    fi
}

