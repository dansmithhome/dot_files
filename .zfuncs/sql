function sql()
{
    local db=Measurements

    if [[ $1 = -d ]]
    then
        db=$2
        shift
        shift
    fi

    if [[ $1 = recreate ]]
    then
        mysql -e "source $HOME/src/dataverse/src/sql/create-measurements-db.sql"  ${db}
        mysql -e "source $HOME/src/dataverse/src/sql/create-views-procs.sql"      ${db}
    else
        mysql -e "$*"  ${db}
    fi
}

